{
  "manifest_version": 3,
  "name": "Fact-It",
  "version": "0.1.0",
  "description": "Real-time fact-checking for social media and web articles",
  "icons": {
    "16": "public/icons/icon16.png",
    "48": "public/icons/icon48.png",
    "128": "public/icons/icon128.png"
  },
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "fact-it@example.com",
      "strict_min_version": "121.0"
    }
  },
  "background": {
    "scripts": ["src/background/service-worker.ts"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*",
        "*://facebook.com/*"
      ],
      "js": [
        "src/content/facebook-content.ts"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "exclude_matches": [
        "*://*.facebook.com/*",
        "*://facebook.com/*"
      ],
      "js": [
        "src/content/universal-content.ts"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "public/icons/icon16.png",
      "48": "public/icons/icon48.png",
      "128": "public/icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["public/icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
